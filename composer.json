{
  "name": "muhammadadela/phplitecore",
  "description": "phpLiteCore is a modern, lightweight, and fast PHP framework for building web applications of any size.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Muhammad Mahmoud",
      "email": "ceo@itvillage.net"
    }
  ],
  "require": {
    "php": ">=8.3",
    "ext-bcmath": "*",
    "ext-exif": "*",
    "ext-fileinfo": "*",
    "ext-gd": "*",
    "ext-intl": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "phpmailer/phpmailer": "^7.0",
    "symfony/console": "^6.4|^7.0",
    "symfony/yaml": "^6.4",
    "vlucas/phpdotenv": "^5.6"
  },
  "suggest": {
    "ext-mysqli": "Optional if you implement a MySQLi driver.",
    "ext-sqlsrv": "Optional if you implement a SQLSRV driver."
  },
  "bin": ["bin/console"],
  "autoload": {
    "psr-4": {
      "PhpLiteCore\\": "src/",
      "App\\": "app/"
    },
    "files": [
      "src/Helpers/Functions.php",
      "src/Bootstrap/ErrorHandler.php"
    ]
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.64",
    "pestphp/pest": "^2.34",
    "phpstan/phpstan": "^1.12",
    "symfony/var-dumper": "^6.4"
  },
  "scripts": {
    "test": "pest",
    "test:coverage": "pest --coverage",
    "lint": "php -v",
    "check-lock": "composer validate --strict",
    "format": "php-cs-fixer fix",
    "format:check": "php-cs-fixer fix --dry-run --diff",
    "analyse": [
      "phpstan analyse --memory-limit=1G"
    ],
    "quality": [
      "@check-lock",
      "@lint",
      "@format:check",
      "@analyse",
      "@test"
    ]
  },
  "scripts-descriptions": {
    "check-lock": "Validate composer.json and ensure composer.lock is up to date",
    "test": "Run the test suite",
    "test:coverage": "Run tests with coverage report",
    "lint": "Check PHP version",
    "format": "Format code using PHP CS Fixer",
    "format:check": "Check code format without making changes",
    "analyse": "Run static analysis with PHPStan",
    "quality": "Run all quality checks"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
