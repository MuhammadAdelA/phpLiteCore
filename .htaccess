<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Handle assets in the public directory
    # If the request is for a file that doesn't exist in the root...
    RewriteCond %{REQUEST_FILENAME} !-f
    # ...but it DOES exist inside the /public directory...
    RewriteCond %{DOCUMENT_ROOT}/public/%{REQUEST_URI} -f
    # ...then serve it from the public directory.
    RewriteRule ^(.*)$ public/$1 [L]

    # Handle Front Controller...
    # If the request is not for a real file or directory...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    # ...then send it to index.php.
    RewriteRule ^ index.php [L]
</IfModule>