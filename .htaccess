<IfModule mod_rewrite.c>
    # Redirect all requests to public subdirectory
    # This allows the old document root configuration to still work
    # For best security and performance, point your web server directly to the public/ directory
    RewriteEngine On

    # If the request is not for a file or directory that exists in root
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    # Redirect to public directory
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
